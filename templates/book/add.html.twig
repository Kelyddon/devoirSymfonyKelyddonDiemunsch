{% block body %}
    <main>
        <!-- Titre de la page -->
        <div class="p-3 mx-auto text-center">
            <h1 class="display-4">Ajouter un livre</h1>
        </div>

        <!-- Contenu de la page -->
        <div class="py-5 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-8 mx-auto">
                        {{ form(form, {'attr': {'novalidate':'novalidate'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
